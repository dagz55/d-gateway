# MCP Gateway Environment Configuration

# Gateway Configuration
GATEWAY_PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# Supabase MCP Configuration
SUPABASE_ACCESS_TOKEN=your_supabase_service_role_key_here

# Tavily Search API (Optional)
TAVILY_API_KEY=your_tavily_api_key_here

# Performance Settings
PROXY_TIMEOUT=30000
MAX_RETRIES=3
HEALTH_CHECK_INTERVAL=30

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://zignal-login.vercel.app
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
