@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap');
@import "tailwindcss/base";
@import "tailwindcss/components";
@import "tailwindcss/utilities";

/* Custom animations for Zignals branding */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 1s ease-out;
}

:root {
  /* Zignal Brand Colors */
  --zignal-primary: #1a7fb3; /* teal-blue */
  --zignal-accent: #33e1da; /* aqua */
  --zignal-secondary: #1e2a44; /* midnight navy */
  --zignal-background: #0a0f1f; /* dark background */
  --zignal-text: #eaf2ff; /* light text */

  /* Enhanced theme colors for Zignal dashboard - DARK THEME ONLY */
  --background: #0a0f1f;
  --foreground: #ffffff; /* Improved contrast - pure white */
  --card: rgba(30, 42, 68, 0.6); /* Increased opacity for better contrast */
  --card-foreground: #ffffff; /* Pure white for better contrast */
  --popover: rgba(30, 42, 68, 0.95); /* Increased opacity */
  --popover-foreground: #ffffff; /* Pure white */
  --primary: #1a7fb3;
  --primary-foreground: #ffffff; /* Pure white for better contrast */
  --secondary: rgba(30, 42, 68, 0.8); /* Increased opacity */
  --secondary-foreground: #ffffff; /* Pure white */
  --muted: rgba(255, 255, 255, 0.15); /* Increased opacity */
  --muted-foreground: rgba(255, 255, 255, 0.85); /* Much better contrast */
  --accent: #33e1da;
  --accent-foreground: #0a0f1f;
  --destructive: #ef4444;
  --destructive-foreground: #ffffff; /* Pure white */
  --border: rgba(51, 225, 218, 0.3); /* Increased opacity */
  --input: rgba(30, 42, 68, 0.7); /* Increased opacity */
  --ring: #33e1da;
  --chart-1: #33e1da;
  --chart-2: #1a7fb3;
  --chart-3: #10b981;
  --chart-4: #f59e0b;
  --chart-5: #ef4444;
  --radius: 12px;
  --sidebar: rgba(21, 33, 54, 0.9); /* Increased opacity */
  --sidebar-foreground: #ffffff; /* Pure white for better contrast */
  --sidebar-primary: #33e1da;
  --sidebar-primary-foreground: #0a0f1f;
  --sidebar-accent: rgba(51, 225, 218, 0.2); /* Increased opacity */
  --sidebar-accent-foreground: #ffffff; /* Pure white */
  --sidebar-border: rgba(51, 225, 218, 0.3); /* Increased opacity */
  --sidebar-ring: #33e1da;
}

/* Zignal theme colors */
:root {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

@layer base {
  * {
    @apply border-gray-200;
  }
  body {
    @apply bg-[var(--color-background)] text-[var(--color-foreground)] font-sans;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', system-ui, -apple-system, sans-serif;
  }
}

/* Added custom animations for Zignal theme */
@keyframes grid-pulse {
  0%,
  100% {
    opacity: 0.3;
  }
  50% {
    opacity: 0.8;
  }
}

@keyframes signal-line {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

@keyframes spin-slow {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes reverse-spin {
  from {
    transform: rotate(360deg);
  }
  to {
    transform: rotate(0deg);
  }
}

@keyframes gradient-shift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes parallax-float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  33% {
    transform: translateY(-10px) rotate(2deg);
  }
  66% {
    transform: translateY(10px) rotate(-2deg);
  }
}

@keyframes drift-slow {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(30px, -30px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

@keyframes drift-reverse {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(-25px, 25px) scale(0.95);
  }
  66% {
    transform: translate(35px, -15px) scale(1.05);
  }
}

@keyframes drift-fast {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
  }
  25% {
    transform: translate(20px, -20px) scale(1.1);
  }
  50% {
    transform: translate(-30px, 10px) scale(0.9);
  }
  75% {
    transform: translate(15px, 25px) scale(1.05);
  }
}

@keyframes draw {
  0% {
    stroke-dasharray: 0 1000;
  }
  100% {
    stroke-dasharray: 1000 0;
  }
}

@keyframes bullet-move {
  0% {
    transform: translate(0, 100vh) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(0, 90vh) scale(1);
  }
  90% {
    opacity: 1;
    transform: translate(0, -10vh) scale(1);
  }
  100% {
    transform: translate(0, -20vh) scale(0);
    opacity: 0;
  }
}

@keyframes bullet-diagonal {
  0% {
    transform: translate(100vw, 100vh) scale(0) rotate(45deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(90vw, 90vh) scale(1) rotate(45deg);
  }
  90% {
    opacity: 1;
    transform: translate(-10vw, -10vh) scale(1) rotate(45deg);
  }
  100% {
    transform: translate(-20vw, -20vh) scale(0) rotate(45deg);
    opacity: 0;
  }
}

@keyframes bullet-fast {
  0% {
    transform: translate(-50px, 100vh) scale(0) rotate(-10deg);
    opacity: 0;
  }
  5% {
    opacity: 1;
    transform: translate(-40px, 95vh) scale(1) rotate(-10deg);
  }
  95% {
    opacity: 1;
    transform: translate(50px, -5vh) scale(1) rotate(-10deg);
  }
  100% {
    transform: translate(60px, -10vh) scale(0) rotate(-10deg);
    opacity: 0;
  }
}

/* Crypto-specific animations */
@keyframes crypto-float {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg) scale(1);
    opacity: 0.2;
  }
  25% {
    transform: translate(20px, -30px) rotate(5deg) scale(1.1);
    opacity: 0.4;
  }
  50% {
    transform: translate(-10px, -60px) rotate(-3deg) scale(0.9);
    opacity: 0.6;
  }
  75% {
    transform: translate(30px, -40px) rotate(8deg) scale(1.05);
    opacity: 0.3;
  }
}

@keyframes price-drift {
  0% {
    transform: translateY(0px) translateX(0px);
    opacity: 0;
  }
  10% {
    opacity: 0.6;
  }
  90% {
    opacity: 0.4;
  }
  100% {
    transform: translateY(-80px) translateX(30px);
    opacity: 0;
  }
}

@keyframes candle-pulse {
  0%, 100% {
    opacity: 0.4;
    transform: scaleY(1);
  }
  50% {
    opacity: 0.7;
    transform: scaleY(1.1);
  }
}

@keyframes data-stream {
  0% {
    transform: translateY(100vh) scaleY(0);
    opacity: 0;
  }
  10% {
    opacity: 0.8;
    transform: translateY(90vh) scaleY(1);
  }
  90% {
    opacity: 0.3;
    transform: translateY(-10vh) scaleY(1);
  }
  100% {
    transform: translateY(-20vh) scaleY(0);
    opacity: 0;
  }
}

@keyframes volume-pulse {
  0%, 100% {
    transform: scaleY(0.3);
    opacity: 0.3;
  }
  50% {
    transform: scaleY(1);
    opacity: 0.8;
  }
}

@keyframes chart-draw {
  0% {
    stroke-dasharray: 0 2000;
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  100% {
    stroke-dasharray: 2000 0;
    opacity: 0.8;
  }
}

@keyframes crypto-glow {
  0%, 100% {
    transform: scale(1) translate(0, 0);
    opacity: 0.1;
  }
  33% {
    transform: scale(1.2) translate(20px, -10px);
    opacity: 0.2;
  }
  66% {
    transform: scale(0.8) translate(-15px, 15px);
    opacity: 0.15;
  }
}

@keyframes crypto-glow-delayed {
  0%, 100% {
    transform: scale(1) translate(0, 0);
    opacity: 0.08;
  }
  40% {
    transform: scale(1.3) translate(-25px, 20px);
    opacity: 0.18;
  }
  80% {
    transform: scale(0.9) translate(30px, -15px);
    opacity: 0.12;
  }
}

@keyframes crypto-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.15;
  }
  50% {
    transform: scale(1.4);
    opacity: 0.25;
  }
}

.animate-grid-pulse {
  animation: grid-pulse 3s ease-in-out infinite;
}

.animate-signal-line {
  animation: signal-line 2s ease-in-out infinite;
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-spin-slow {
  animation: spin-slow 20s linear infinite;
}

.animate-reverse-spin {
  animation: reverse-spin 20s linear infinite;
}

.animate-gradient-shift {
  animation: gradient-shift 4s ease-in-out infinite;
}

.animate-parallax-float {
  animation: parallax-float 8s ease-in-out infinite;
}

.animate-drift-slow {
  animation: drift-slow 8s ease-in-out infinite;
}

.animate-drift-reverse {
  animation: drift-reverse 10s ease-in-out infinite;
}

.animate-drift-fast {
  animation: drift-fast 6s ease-in-out infinite;
}

.animate-draw {
  animation: draw 3s ease-in-out infinite;
}

.animate-bullet-move {
  animation: bullet-move 4s linear infinite;
}

.animate-bullet-diagonal {
  animation: bullet-diagonal 5s linear infinite;
}

.animate-bullet-fast {
  animation: bullet-fast 2s linear infinite;
}

/* Crypto animation classes */
.animate-crypto-float {
  animation: crypto-float 15s ease-in-out infinite;
}

.animate-price-drift {
  animation: price-drift 10s ease-out infinite;
}

.animate-candle-pulse {
  animation: candle-pulse 4s ease-in-out infinite;
}

.animate-data-stream {
  animation: data-stream 6s linear infinite;
}

.animate-volume-pulse {
  animation: volume-pulse 3s ease-in-out infinite;
}

.animate-chart-draw {
  animation: chart-draw 8s ease-in-out infinite;
}

.animate-crypto-glow {
  animation: crypto-glow 12s ease-in-out infinite;
}

.animate-crypto-glow-delayed {
  animation: crypto-glow-delayed 15s ease-in-out infinite;
}

.animate-crypto-pulse {
  animation: crypto-pulse 6s ease-in-out infinite;
}

/* Enhanced glassmorphism and dashboard utilities */
.glass {
  background: rgba(30, 42, 68, 0.3);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(51, 225, 218, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

/* Advanced Glassmorphic Variants */
.glass-light {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.12);
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.08),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1);
}

.glass-heavy {
  background: rgba(30, 42, 68, 0.45);
  backdrop-filter: blur(24px);
  border: 1px solid rgba(51, 225, 218, 0.2);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.5),
    inset 0 1px 0 rgba(255, 255, 255, 0.1),
    inset 0 -1px 0 rgba(0, 0, 0, 0.2);
}

.glass-subtle {
  background: rgba(30, 42, 68, 0.15);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(51, 225, 218, 0.08);
  box-shadow:
    0 4px 20px rgba(0, 0, 0, 0.25),
    inset 0 1px 0 rgba(255, 255, 255, 0.03);
}

.glass-premium {
  background: linear-gradient(
    135deg,
    rgba(30, 42, 68, 0.4) 0%,
    rgba(26, 127, 179, 0.15) 50%,
    rgba(51, 225, 218, 0.08) 100%
  );
  backdrop-filter: blur(18px);
  border: 1px solid rgba(51, 225, 218, 0.15);
  box-shadow:
    0 10px 35px rgba(0, 0, 0, 0.4),
    inset 0 2px 0 rgba(255, 255, 255, 0.08),
    inset 0 -1px 0 rgba(0, 0, 0, 0.15),
    0 0 20px rgba(51, 225, 218, 0.1);
}

.glass-card {
  background: rgba(30, 42, 68, 0.35);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(51, 225, 218, 0.12);
  border-radius: 16px;
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.35),
    inset 0 1px 0 rgba(255, 255, 255, 0.06),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.glass-header {
  background: linear-gradient(
    135deg,
    rgba(30, 42, 68, 0.6) 0%,
    rgba(26, 127, 179, 0.25) 100%
  );
  backdrop-filter: blur(20px);
  border: 1px solid rgba(51, 225, 218, 0.2);
  border-radius: 20px;
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.4),
    inset 0 2px 0 rgba(255, 255, 255, 0.1),
    inset 0 -2px 0 rgba(0, 0, 0, 0.15),
    0 0 30px rgba(51, 225, 218, 0.15);
}

.glass-stat-card {
  background: linear-gradient(
    145deg,
    rgba(30, 42, 68, 0.4) 0%,
    rgba(26, 127, 179, 0.2) 70%,
    rgba(51, 225, 218, 0.1) 100%
  );
  backdrop-filter: blur(16px);
  border: 1px solid rgba(51, 225, 218, 0.15);
  border-radius: 14px;
  box-shadow:
    0 6px 25px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.08),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.glass-stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.05),
    transparent
  );
  transition: left 0.8s ease;
}

.glass-activity-card {
  background: rgba(30, 42, 68, 0.3);
  backdrop-filter: blur(14px);
  border: 1px solid rgba(51, 225, 218, 0.1);
  border-radius: 18px;
  box-shadow:
    0 8px 30px rgba(0, 0, 0, 0.35),
    inset 0 1px 0 rgba(255, 255, 255, 0.05);
  position: relative;
}

.glass-activity-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(51, 225, 218, 0.3),
    transparent
  );
}

/* Additional animation utilities */
.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Glass hover and interactive states */
.glass-hover:hover {
  background: rgba(30, 42, 68, 0.4);
  border-color: rgba(51, 225, 218, 0.2);
  transform: translateY(-1px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.08);
}

.glass-stat-card:hover {
  transform: translateY(-2px);
  border-color: rgba(51, 225, 218, 0.25);
  box-shadow:
    0 8px 35px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.12),
    inset 0 -1px 0 rgba(0, 0, 0, 0.15),
    0 0 25px rgba(51, 225, 218, 0.2);
}

.glass-stat-card:hover::before {
  left: 100%;
}

.glass-activity-card:hover {
  background: rgba(30, 42, 68, 0.4);
  border-color: rgba(51, 225, 218, 0.15);
  transform: translateY(-1px);
  box-shadow:
    0 10px 35px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.08);
}

.glass-header:hover {
  border-color: rgba(51, 225, 218, 0.3);
  box-shadow:
    0 15px 45px rgba(0, 0, 0, 0.5),
    inset 0 2px 0 rgba(255, 255, 255, 0.15),
    inset 0 -2px 0 rgba(0, 0, 0, 0.2),
    0 0 40px rgba(51, 225, 218, 0.25);
}

.dashboard-bg {
  background: linear-gradient(135deg, #0a0f1f 0%, #1e2a44 50%, #1a7fb3 100%);
  position: relative;
}

.dashboard-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(51, 225, 218, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(26, 127, 179, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.gradient-text {
  background: linear-gradient(135deg, #33e1da 0%, #1a7fb3 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.bg-gradient-radial {
  background: radial-gradient(circle, var(--tw-gradient-stops));
}

.card-glow {
  box-shadow: 0 0 20px rgba(51, 225, 218, 0.1);
}

.card-glow-hover:hover {
  box-shadow: 0 0 30px rgba(51, 225, 218, 0.2);
}

/* Performance optimizations for 60fps animations */
* {
  /* Enable hardware acceleration for all elements with transforms */
  -webkit-transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  -webkit-perspective: 1000;
}

.animate-float,
.animate-spin-slow,
.animate-reverse-spin,
.animate-parallax-float,
.animate-bullet-move,
.animate-bullet-diagonal,
.animate-bullet-fast {
  /* Force GPU acceleration for smooth animations */
  transform: translate3d(0, 0, 0);
  will-change: transform, opacity;
  backface-visibility: hidden;
}

/* Add glow effects for bullet animations */
.animate-bullet-move {
  box-shadow: 0 0 8px rgba(51, 225, 218, 0.6);
}

.animate-bullet-diagonal {
  box-shadow: 0 0 6px rgba(26, 127, 179, 0.5);
}

.animate-bullet-fast {
  box-shadow: 0 0 10px rgba(34, 197, 94, 0.7);
}

/* Optimize transitions for performance */
.transition-all,
.transition-transform,
.transition-opacity {
  /* Use hardware acceleration */
  transform: translateZ(0);
  will-change: transform, opacity;
}

/* Reduce motion on lower-end devices */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* Performance optimizations for mobile devices */
@media (max-width: 768px) {
  .animate-float {
    animation-duration: 8s; /* Slower on mobile */
  }
  
  .animate-parallax-float {
    animation-duration: 12s; /* Slower on mobile */
  }
  
  /* Disable complex animations on very small screens */
  @media (max-width: 480px) {
    .animate-gradient-shift {
      animation: none;
      background-position: 0% 50%;
    }
  }
}

/* Container queries for responsive animations */
@container (max-width: 600px) {
  .crypto-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@container (max-width: 400px) {
  .crypto-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Improve scroll performance */
html {
  scroll-behavior: smooth;
}

@media (prefers-reduced-motion: reduce) {
  html {
    scroll-behavior: auto;
  }
}

/* Optimize for retina displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .crypto-icon {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
}

/* Focus states for accessibility */
button:focus-visible,
a:focus-visible {
  outline: 2px solid #33E1DA;
  outline-offset: 2px;
  border-radius: 4px;
}

